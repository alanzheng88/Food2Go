# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*      /                                        module:secure

# Home page
GET     /                                       Application.index

# Authentication
GET     /api/authenticate                       AuthenticationController.authenticate
GET     /api/authenticate/status                AuthenticationController.checkAuthenticated
DELETE  /api/authenticate                       AuthenticationController.deleteSession

# Users
GET     /api/users                              UserController.getUsers
GET     /api/user/{id}                          UserController.getUser
POST    /api/user                               UserController.createUser


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
