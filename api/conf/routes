# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Authentication
POST    /api/authenticate                       Authentication.createSession                       
DELETE  /api/authenticate                       Authentication.deleteSession

# Users
GET     /api/users                              UserController.getUsers
GET     /api/user/{id}                          UserController.getUser
POST    /api/user                               UserController.createUser

#Restaurants
GET     /api/restaurants                        Application.getRestaurants
GET     /api/restaurant/{id}                    Application.getRestaurant
POST    /api/restaurants/register               Application.createRestaurant

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
